<h3><%= experiment.name %> <span class="type">(<%= experiment.class.friendly_name %>)</span></h3>
<%= simple_format experiment.description, :class=>"description" %>
<%= render :partial => "vanity/#{experiment.type}", :locals => {:experiment => experiment} %>
<p class="meta">
  Started <%= experiment.created_at.strftime("%a, %b %d") %>
  <%= " | Completed #{experiment.completed_at.strftime("%a, %b %d")}" unless experiment.active? %>
</p>
